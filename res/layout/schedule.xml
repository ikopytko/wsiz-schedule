<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <Button
            android:id="@+id/btn_sch_next"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/b_strip"
            android:text="@string/next" />

        <Button
            android:id="@+id/btn_sch_prev"
            android:layout_width="68dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/b_strip"
            android:text="@string/prew" />

        <TextView
            android:id="@+id/title_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_sch_prev"
            android:layout_alignBottom="@+id/btn_sch_prev"
            android:layout_centerHorizontal="true"
            android:text="Date" />

    </RelativeLayout>

    <fragment
        android:name="pl.wsiz.schedule.Fragment_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </fragment>

</LinearLayout>